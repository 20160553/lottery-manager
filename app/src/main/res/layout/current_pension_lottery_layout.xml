<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pensionWinNumberLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pensionWinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:text="1등 당첨번호"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/pensionGroupNumber"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/pensionGroupNumber"/>

        <TextView
            android:id="@+id/pensionGroupNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottery_number_shape_0"
            android:gravity="center"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pensionGroupTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pensionWinTextView"
            tools:text="1" />

        <TextView
            android:id="@+id/pensionGroupTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/pensionGroupNumber"
            app:layout_constraintEnd_toStartOf="@id/pensionFirstNumber"
            app:layout_constraintStart_toEndOf="@id/pensionGroupNumber"
            app:layout_constraintTop_toTopOf="@id/pensionGroupNumber" />

        <TextView
            android:id="@+id/pensionFirstNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottery_number_shape_1"
            android:gravity="center"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@id/pensionGroupNumber"
            app:layout_constraintEnd_toStartOf="@id/pensionSecondNumber"
            app:layout_constraintStart_toEndOf="@id/pensionGroupTextView"
            app:layout_constraintTop_toTopOf="@id/pensionGroupNumber"
            tools:text="1" />

        <TextView
            android:id="@+id/pensionSecondNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottery_number_shape_2"
            android:gravity="center"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@id/pensionGroupNumber"
            app:layout_constraintEnd_toStartOf="@id/pensionThirdNumber"
            app:layout_constraintStart_toEndOf="@id/pensionFirstNumber"
            app:layout_constraintTop_toTopOf="@id/pensionGroupNumber"
            tools:text="2" />

        <TextView
            android:id="@+id/pensionThirdNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottery_number_shape_3"
            android:gravity="center"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@id/pensionGroupNumber"
            app:layout_constraintEnd_toStartOf="@id/pensionFourthNumber"
            app:layout_constraintStart_toEndOf="@id/pensionSecondNumber"
            app:layout_constraintTop_toTopOf="@id/pensionGroupNumber"
            tools:text="3" />

        <TextView
            android:id="@+id/pensionFourthNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottery_number_shape_4"
            android:gravity="center"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@id/pensionGroupNumber"
            app:layout_constraintEnd_toStartOf="@id/pensionFifthNumber"
            app:layout_constraintStart_toEndOf="@id/pensionThirdNumber"
            app:layout_constraintTop_toTopOf="@id/pensionGroupNumber"
            tools:text="4" />

        <TextView
            android:id="@+id/pensionFifthNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottery_number_shape_5"
            android:gravity="center"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@id/pensionGroupNumber"
            app:layout_constraintEnd_toStartOf="@id/pensionSixthNumber"
            app:layout_constraintStart_toEndOf="@id/pensionFourthNumber"
            app:layout_constraintTop_toTopOf="@id/pensionGroupNumber"
            tools:text="5" />

        <TextView
            android:id="@+id/pensionSixthNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottery_number_shape_6"
            android:gravity="center"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@id/pensionGroupNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/pensionFifthNumber"
            app:layout_constraintTop_toTopOf="@id/pensionGroupNumber"
            tools:text="6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pensionBonusNumberLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pensionWinNumberLayout">

        <TextView
            android:id="@+id/pensionBonusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:text="보너스 당첨번호"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/bonusGroupLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bonusGroupLayout"/>


        <LinearLayout
            android:id="@+id/bonusGroupLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pensionBonusFirstNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pensionBonusTextView">

            <TextView
                android:id="@+id/pensionBonusGroupNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                tools:text="모든" />

            <TextView
                android:id="@+id/pensionBonusGroupTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/pensionBonusFirstNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottery_number_shape_1"
            android:gravity="center"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@id/bonusGroupLayout"
            app:layout_constraintEnd_toStartOf="@id/pensionBonusSecondNumber"
            app:layout_constraintStart_toEndOf="@id/bonusGroupLayout"
            app:layout_constraintTop_toTopOf="@id/bonusGroupLayout"
            tools:text="1" />

        <TextView
            android:id="@+id/pensionBonusSecondNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottery_number_shape_2"
            android:gravity="center"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@id/bonusGroupLayout"
            app:layout_constraintEnd_toStartOf="@id/pensionBonusThirdNumber"
            app:layout_constraintStart_toEndOf="@id/pensionBonusFirstNumber"
            app:layout_constraintTop_toTopOf="@id/bonusGroupLayout"
            tools:text="2" />

        <TextView
            android:id="@+id/pensionBonusThirdNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottery_number_shape_3"
            android:gravity="center"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@id/bonusGroupLayout"
            app:layout_constraintEnd_toStartOf="@id/pensionBonusFourthNumber"
            app:layout_constraintStart_toEndOf="@id/pensionBonusSecondNumber"
            app:layout_constraintTop_toTopOf="@id/bonusGroupLayout"
            tools:text="3" />

        <TextView
            android:id="@+id/pensionBonusFourthNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottery_number_shape_4"
            android:gravity="center"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@id/bonusGroupLayout"
            app:layout_constraintEnd_toStartOf="@id/pensionBonusFifthNumber"
            app:layout_constraintStart_toEndOf="@id/pensionBonusThirdNumber"
            app:layout_constraintTop_toTopOf="@id/bonusGroupLayout"
            tools:text="4" />

        <TextView
            android:id="@+id/pensionBonusFifthNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottery_number_shape_5"
            android:gravity="center"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@id/bonusGroupLayout"
            app:layout_constraintEnd_toStartOf="@id/pensionBonusSixthNumber"
            app:layout_constraintStart_toEndOf="@id/pensionBonusFourthNumber"
            app:layout_constraintTop_toTopOf="@id/bonusGroupLayout"
            tools:text="5" />

        <TextView
            android:id="@+id/pensionBonusSixthNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottery_number_shape_6"
            android:gravity="center"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@id/bonusGroupLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/pensionBonusFifthNumber"
            app:layout_constraintTop_toTopOf="@id/bonusGroupLayout"
            tools:text="6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>